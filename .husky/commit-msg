#!/usr/bin/env bash
. "$(dirname -- "$0")/_/husky.sh"

message="$(cat $1)"
requiredPattern="^(revert: )?(feat|fix|docs|style|refactor|workflow|perf|test|build|ci|chore|types)(\(.+\))?: .{1,50}"
if ! [[ $message =~ $requiredPattern ]]; then
    echo "-"
    echo "-"
    echo "-"
    echo "ðŸš¨ Wrong commit message! ðŸ˜•"
    echo "The commit message must have this format:"
    echo "<verb in imperative mood> <what was done>"
    echo "Allowed verbs in imperative mood: feat|fix|docs|style|refactor|workflow|perf|test|build|ci|chore|types"
    echo "Example: feat(theme): add new feature"
    echo "-"
    echo "Your commit message was:"
    echo $message
    echo "-"
    echo "For more information, check script in .husky/commit-msg"
    echo "-"
    exit 1
fi
